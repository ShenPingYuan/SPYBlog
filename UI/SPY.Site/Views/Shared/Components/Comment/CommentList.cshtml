@using SPY.View.Model
@model CommentListViewModel
<div class="Comment">
    <div class="Comment-head">
        ❀发表评论❀
    </div>
    <div class="Comment-user">
        <form action="" class="Comment-form">
            <div class="user-info">
                <img class="user-info-head" src="~/images/user-default.png" alt="">
                <div class="user-content">
                    <div class="user-info-details">
                        <input type="text" name="qq" id="qq" placeholder="QQ（可获取头像）">
                        <input type="text" name="nickname" id="nickname" value="" placeholder="自动获取" readonly autocomplete="off">
                    </div>
                    <div class="user-text">
                        <textarea id="comment-textarea" name="content" placeholder="既然来了就评论一下呗" style="height: 50px;"></textarea>
                    </div>
                    <input type="hidden" name="articleId" id="articleId" value="@Model.ArticleId" />
                </div>
            </div>
            <button class="Comment-submit-btn" type="button">提交</button>
        </form>
    </div>
    <ul class="Comment-ul">
        @for (int i = 0; i < Model.List.Count; i++)
        {
            <li>
                <div class="Comment-body">
                    <div class="comment-user-image">
                        <img class="user-info-head" src="@Model.List[i].HeadImageUrl" alt="">
                    </div>
                    <div class="comment-user-info">
                        <div class="Comment-top">
                            <span class="user-nickname">@Model.List[i].NickName</span>
                            <span class="Comment-time" style="color: #757575;">@Model.List[i].CommentTime</span>
                        </div>
                        <div class="Comment-content">
                            <div class="Comment-content-text">
                                @Model.List[i].Content
                            </div>
                        </div>
                        <div class="Comment-footer">
                            <span class="reply" style="color: #a5a5f9;">回复</span>&nbsp;
                            <span class="support">
                                <span>赞</span>
                                <span>@Model.List[i].Supports</span>
                            </span>
                        </div>
                    </div>
                </div>
                <form action="/" method="post">
                    <input type="hidden" name="commentId" value="@Model.List[i].CommentId" />
                </form>
            </li>
        }
    </ul>
</div>
