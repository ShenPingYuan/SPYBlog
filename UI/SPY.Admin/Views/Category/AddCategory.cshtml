@using SPY.View.Model
@model CategoryViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>添加分类栏目</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="stylesheet" href="~/layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="~/css/public.css" media="all" />
</head>
<body class="childrenBody">
    <form class="layui-form" style="width:80%;">
        <div class="layui-form-item layui-row layui-col-xs9">
            <label class="layui-form-label">栏目分类名</label>
            <div class="layui-input-inline">
                <input type="text" class="layui-input categoryName" value="@Model.CategoryName" name="categoryName" lay-verify="required" placeholder="请输入栏目分类名">
            </div>
        </div>
        <div class="layui-form-item layui-row layui-col-xs12">
            <label class="layui-form-label">栏目所在导航名</label>
            <div class="layui-input-inline">
                <input type="text" class="layui-input parentCategoryName" value="@Model.ParentCategoryName" name="parentCategoryName" lay-verify="required" placeholder="请输入栏目所在导航名">
            </div>
        </div>
        @*<div class="layui-form-item isOpen">
            <label class="layui-form-label"><i class="seraph icon-zhiding"></i> 开  放</label>
            <div class="layui-input-block isOpen">
                <input type="checkbox" name="isOpen" lay-skin="switch" lay-text="是|否" id="ck_Open">
                <input type="hidden" name="open" value="@Model.IsOpen" />
            </div>
        </div>*@
        <div class="layui-form-item layui-row layui-col-xs12">
            <div class="layui-input-block">
                <button class="layui-btn layui-btn-sm" lay-submit="" lay-filter="addCategory">立即添加</button>
                <button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">取消</button>
            </div>
        </div>
        <input type="hidden" name="id" value="@Model.Id" />
    </form>
    <script type="text/javascript" src="~/layui/layui.js"></script>
    <script type="text/javascript" src="~/js/categoryColumnAdd.js"></script>
</body>
</html>